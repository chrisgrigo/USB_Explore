<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/fill">

    <com.example.grigo.usb_explore.PinView style="@style/mainPanel" android:id="@+id/mapView"/>

    <android.widget.Toolbar
        android:id="@+id/map_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3e5fc"
        android:elevation="4dp"
         />


    <Button
        android:id="@+id/btnDirectionsTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="25dp"
        android:text="@string/directions_to"
        android:textSize="14sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="133dp"
        android:text="@string/go"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnCancelDirectionsTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="30dp"
        android:text="@string/cancel_directions_to"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnFloor0"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="25dp"
        android:background="@color/colorPrimary"
        android:text="@string/floor0"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnFloor1"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="76dp"
        android:text="@string/floor1"/>

    <Button
        android:id="@+id/btnFloor2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="127dp"
        android:text="@string/floor2"/>

    <Button
        android:id="@+id/btnFloor3"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="178dp"
        android:text="@string/floor3"/>

    <Button
        android:id="@+id/btnFloor4"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="229dp"
        android:text="@string/floor4"/>

    <Button
        android:id="@+id/btnFloor5"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="280dp"
        android:text="@string/floor5"/>

    <Button
        android:id="@+id/btnFloor6"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="331dp"
        android:text="@string/floor6"/>

    <ImageView
        android:id="@+id/key"
        android:layout_width="101dp"
        android:layout_height="252dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="128dp"
        app:srcCompat="@drawable/key" />

</RelativeLayout>