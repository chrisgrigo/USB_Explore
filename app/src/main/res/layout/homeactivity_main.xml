<?xml version="1.0" encoding="utf-8"?>

    <!-- Comments-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.grigo.usb_explore.HomePageActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3e5fc"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

<!-- Slider from AndroidJSon-->
<com.daimajia.slider.library.SliderLayout
    android:id="@+id/slider"
    android:layout_width="match_parent"
    android:layout_height="400px"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/my_toolbar"
    android:layout_marginTop="28dp"
    android:scaleType="fitCenter" />

<ImageButton
    android:id="@+id/floor_maps"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/slider"
    android:layout_marginTop="35dp"
    android:adjustViewBounds="true"
    android:padding="0dp"
    android:scaleType="fitXY"
    android:src="@drawable/floormaps"
    tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/staff_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/floor_maps"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/staffpic" />

<View
    android:id="@+id/SplitLine_hor1"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginHorizontal="45dp"
    android:layout_below="@id/staff_search"
    android:layout_marginBottom="-20dp"
    android:background="@color/black" />

    <ImageButton
        android:id="@+id/venue_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SplitLine_hor1"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/venuepic" />

<View
    android:id="@+id/SplitLine_hor2"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginHorizontal="45dp"
    android:layout_below="@id/venue_availability"
    android:layout_marginTop="-20dp"
    android:layout_marginBottom="-20dp"
    android:background="@color/black" />

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/SplitLine_hor2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/settings_pic" />

    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@id/settings_button"
        android:layout_below="@id/SplitLine_hor2"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/help3icon" />

</RelativeLayout>
